<div class='container' style="margin-top:150px">
    <div class='row'>
        <div class='col-sm-6'>
            <div class="panel panel-primary">
                <div class="panel-heading">Latest Orders</div>
                <div class="panel-body">
                   <% @orders.each do|order| %>
                    
                    <%= link_to  "#{order.name}", order_path(order.id) %>
                    <br>
                   <%end%>
                </div>
            </div>

        </div>
        <div class='col-sm-6'>
            <div class="panel panel-success">
                <div class="panel-heading">Friends Activity</div>
                <div class="panel-body">
                
                    <% @firendsNotify.each do|friend| %>
                     <% if !friend.friend.orders.blank? %>
                        <%= friend.friend.name%> make 
                        
                            <%= link_to  "#{friend.friend.orders.first.name}", order_path(friend.friend.orders.first.id) %> order
                        <br>
                    
                   <%end%>
                <%end%>
                </div>
            </div>

        </div>
    </div>

